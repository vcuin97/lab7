    <body class="container">
        
        <h1 class="jumbotron"> Pixabay Image Search </h1>
    <hr>

        <form action="results">
            
        Keyword: <input type="text" name="keyword" id="keyword"><br><br>
        Orientation: <select name="orientation" id="orientationColor">
            <option>Select</option>
            <option name="orientation" value="horizontal">Horizontal</option>
            <option name="orientation" value="vertical">Vertical</option>
           
        </select>
       
        <button id="searchBtn">Search</button>
        
        <hr>
        <div id="images"></div>
        <hr>
            
        <figure>
            <img src="/img/iBCpb.png"> Likes: <%=images.hits[0].likes%>
